        :root { --dark: #0f172a; --green: #02BF93; --bg: #f8fafc; }
        body { font-family: 'Inter', sans-serif; background: var(--bg); margin: 0; color: #334155; }
        
        /* Header */
        header { background: #fff; padding: 20px 0; border-bottom: 1px solid #e2e8f0; }
        .container { max-width: 1140px; margin: 0 auto; padding: 0 20px; }
        .nav { display: flex; justify-content: space-between; align-items: center; }
        .logo { font-size: 24px; font-weight: 800; color: var(--dark); text-decoration: none; letter-spacing: -1px; }
        .logo span { color: var(--green); }
        .btn-site { color: var(--dark); text-decoration: none; font-weight: 600; font-size: 14px; }
        .btn-site:hover { color: var(--green); }

        /* Hero */
        .hero { text-align: center; padding: 80px 0 60px; }
        .hero h1 { font-size: 42px; font-weight: 800; color: var(--dark); margin: 0 0 15px 0; letter-spacing: -1px; }
        .hero p { font-size: 18px; color: #64748b; }

        /* Grid */
        .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 30px; margin-bottom: 80px; }
        .card { background: #fff; border: 1px solid #e2e8f0; border-radius: 12px; padding: 30px; transition: 0.3s; display: flex; flex-direction: column; }
        .card:hover { transform: translateY(-5px); border-color: var(--green); box-shadow: 0 10px 30px rgba(0,0,0,0.05); }
        .date { font-size: 11px; font-weight: 700; color: var(--green); text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px; }
