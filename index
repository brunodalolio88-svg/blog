    <header>
        <div class="container nav">
            <a href="index.html" class="logo">KYNTO<span>.</span> <small style="font-size:12px; font-weight:400; color:#94a3b8">BLOG</small></a>
            <a href="https://kynto.com.br" class="btn-site">Voltar ao Site Oficial →</a>
        </div>
    </header>

    <div class="hero">
        <div class="container">
            <h1>Artigos & Novidades</h1>
            <p>Fique por dentro das melhores dicas de tecnologia.</p>
        </div>
    </div>

    <div class="container">
        <div id="posts" class="grid">
            <p style="text-align:center; width:100%; color:#94a3b8;">Carregando...</p>
        </div>
    </div>

    <script>
        const CONFIG = {
            USER: 'brunodalolio88-svg', // <--- EDITE AQUI TAMBÉM
            REPO: 'blog',       // <--- EDITE AQUI TAMBÉM
            DB_FILE: 'db.json'
        };

        fetch(`https://raw.githubusercontent.com/${CONFIG.USER}/${CONFIG.REPO}/main/${CONFIG.DB_FILE}`)
            .then(res => res.json())
            .then(posts => {
                const grid = document.getElementById('posts');
                grid.innerHTML = '';
                
                // Filtra apenas os publicados
                const published = posts.filter(p => p.status === 'published');

                if(published.length === 0) {
                    grid.innerHTML = '<p style="text-align:center; width:100%">Em breve novos artigos.</p>';
                    return;
                }

                published.forEach(post => {
                    grid.innerHTML += `
                        <article class="card">
                            <span class="date">${post.date}</span>
                            <h2 class="title">${post.title}</h2>
                            <p class="excerpt">${post.snippet}</p>
                            <a href="posts/${post.slug}.html" class="read-more">Ler Completo <i class="fa-solid fa-arrow-right"></i></a>
                        </article>
                    `;
                });
            })
            .catch(e => document.getElementById('posts').innerHTML = '<p style="text-align:center">Erro ao carregar.</p>');
    </script>

</body>
